    <top>
        <GridPane prefHeight="70.0" prefWidth="667.0" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="85.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="15.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="50.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <Label alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="32.0" prefWidth="567.0" text="Providers Management" textFill="#ff9800">
                <font>
                    <Font name="Segoe UI Bold" size="36.0" />
                </font>
            <effect>
               <DropShadow>
                  <color>
                     <Color red="1.0" green="0.5960784554481506" />
                  </color>
               </DropShadow>
            </effect>
            <GridPane.margin>
               <Insets bottom="20.0" top="10.0" />
            </GridPane.margin>
            <padding>
               <Insets top="10.0" />
            </padding>
            </Label>
         <HBox GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.valignment="CENTER" GridPane.vgrow="ALWAYS">
            <children>
                  <JFXButton alignment="CENTER" contentDisplay="CENTER" defaultButton="true" onMouseClicked="#newProviderOnClick" text="   ">
                      <graphic>
                          <MaterialIconView fill="#ff9800" glyphName="ADD" size="45">
                              <font>
                                  <Font size="38.0" />
                              </font>
                          </MaterialIconView>
                      </graphic>
                      <font>
                          <Font size="28.0" />
                      </font>
                  <padding>
                     <Insets top="10.0" />
                  </padding>
                  </JFXButton>
            </children>
         </HBox>
         <HBox prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="1">
            <children>
               <MaterialIconView fill="#ff9800" glyphName="SEARCH" size="35" wrappingWidth="37.60000228881836">
                  <HBox.margin>
                     <Insets top="15.0" />
                  </HBox.margin>
               </MaterialIconView>
               <TextField fx:id="fldFilter" prefHeight="30.0" prefWidth="255.0" promptText="Type ID, Name, Phone to search " style="-fx-border-color: FF9800; -fx-background-radius: 10; -fx-border-radius: 10;">
                  <HBox.margin>
                     <Insets bottom="5.0" top="15.0" />
                  </HBox.margin>
                  <font>
                     <Font name="Segoe UI" size="13.600000381469727" />
                  </font>
               </TextField>
            </children>
         </HBox>
         <padding>
            <Insets bottom="20.0" top="10.0" />
         </padding>
        </GridPane>
    </top>
    <center>
        <TableView fx:id="providersTableView" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="75.0" style="-fx-alignment: center-right" text="ID" />
                <TableColumn fx:id="nameColumn" prefWidth="75.0" text="Name" />
                <TableColumn fx:id="phoneColumn" prefWidth="75.0" text="Phone" />
                <TableColumn fx:id="addressColumn" prefWidth="75.0" text="Address" />
                <TableColumn fx:id="dateJoinedColumn" prefWidth="75.0" text="Date Joined" />
                <TableColumn fx:id="promotedByColumn" prefWidth="75.0" text="Promoted By" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
