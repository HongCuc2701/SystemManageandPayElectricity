<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" stylesheets="@./../css/admin.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.admin.ProvidersManagerController">
    <top>
        <GridPane BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="85.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="15.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <Label alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Providers Management" textFill="#ff9800">
                <font>
                    <Font name="Segoe UI Bold" size="36.0" />
                </font>
            <effect>
               <DropShadow>
                  <color>
                     <Color red="1.0" green="0.5960784554481506" />
                  </color>
               </DropShadow>
            </effect>
            <GridPane.margin>
               <Insets top="15.0" />
            </GridPane.margin>
            </Label>
            <JFXButton alignment="CENTER" contentDisplay="CENTER" defaultButton="true" onMouseClicked="#newProviderOnClick" text="   " GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.valignment="CENTER" GridPane.vgrow="ALWAYS">
                <graphic>
                    <MaterialIconView fill="#ff9800" glyphName="ADD" size="45">
                        <font>
                            <Font size="38.0" />
                        </font>
                  <effect>
                     <DropShadow>
                        <color>
                           <Color red="1.0" green="0.5960784554481506" />
                        </color>
                     </DropShadow>
                  </effect>
                    </MaterialIconView>
                </graphic>
                <font>
                    <Font size="28.0" />
                </font>
            </JFXButton>
         <padding>
            <Insets bottom="15.0" />
         </padding>
        </GridPane>
    </top>
    <center>
        <TableView fx:id="providersTableView" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="75.0" style="-fx-alignment: center-right" text="ID" />
                <TableColumn fx:id="nameColumn" prefWidth="75.0" text="Name" />
                <TableColumn fx:id="phoneColumn" prefWidth="75.0" text="Phone" />
                <TableColumn fx:id="addressColumn" prefWidth="75.0" text="Address" />
                <TableColumn fx:id="dateJoinedColumn" prefWidth="75.0" text="Date Joined" />
                <TableColumn fx:id="promotedByColumn" prefWidth="75.0" text="Promoted By" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
</BorderPane>
